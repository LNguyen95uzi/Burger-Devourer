<h1>Burgers!</h1>

<h2>Ready to Eat Burgers!</h2>

<ul>
    {{#each burgers}}
        {{#unless devour}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
        {{/each}}
</ul>

<h2>Devoured Burgers!</h2>

<ul>
    {{#each burgers}}
        {{#if devour}}
            {{> burgers/burger-block devour=false}}
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
    </div>

    <div class="form-group">
        <label for="devour">Devour!</label><br>
        <input type="radio" name="devour" value="1" checked> Devoured!<br>
        <input type="radio" name="devour" value="0"> Uneaten
    </div>

    <button type="submit">Add Burger</button>
</form>